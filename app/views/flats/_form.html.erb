<%= simple_form_for flat do |f| %>
  <%= f.input :name %>
  <%= f.input :address %>
  <%= f.input :price_per_night %>
  <%= f.input :number_of_guests %>
  <%= f.input :picture_url %>
  <%= f.label :description %>
  <%= f.text_area :description, class: 'text-area' %>

  <%= f.submit "Save this post", class: "btn btn-primary" %>
<% end %>

